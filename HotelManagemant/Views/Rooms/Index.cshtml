@model IEnumerable<HotelManagemant.Models.Room>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-clock-o fa-fw"></i> Index Room
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @if (TempData["Message"] != null)
                {
                    <div class="col-md-12">
                        <div class="alert alert-success">@TempData["Message"]</div>
                    </div>
                }

                <table class="table table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RoomNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Capacity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoofBeds)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roomtype)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Capacity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoofBeds)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Roomtype)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @item.Description
                                @*@item.Description.Substring(0, item.Description.Length > 50 ? 50 : item.Description.Length)...*@
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) 
                            </td>
                        </tr>
                    }
                </table>
                <p>
                    <center>
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    </center>
                </p>
            </div>
        </div>
    </div>
</div>
