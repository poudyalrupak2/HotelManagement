@model List<HotelManagemant.Models.Billing>

@{
    ViewBag.Title = "BillIndex";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-clock-o fa-fw"></i>Saved Payments
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <table class="table table-bordered table-responsive">
                    <tr>
                        <th>Bill No </th>
                        <th>Booking No</th>
                        <th>No Of Days</th>
                        <th>Check Out Date</th>
                        <th>Print</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BillNo</td>
                            <td>@item.Booking.bookingNo</td>
                            <td>@item.NoOfDays</td>
                            <td>@item.CheckOutDate.ToShortDateString()</td>
                            <td>@Html.ActionLink("BillPrint", "BillPrint", new { id = item.BillingId }, new { @class = "btn btn-default" })</td>

                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
