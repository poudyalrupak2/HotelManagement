@model HotelManagemant.ViewModels.ChangeStatusViewModel
@{
    ViewBag.Title = "ChangeStatus";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-clock-o fa-fw"></i>Add Customer
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">


                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(m => m.RoomId)
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Room No</label>
                            @Html.TextBoxFor(m => m.RoomNo, new { @class = "form-control", id = "txtRoomNo", @readOnly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Status</label>
                            <select name="Status" class="form-control">
                                <option>--Select--</option>
                                @foreach (var item in Model.RoomStatus)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4" style="padding-top:23px;">
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Change" />
                        </div>
                    </div>
                }
            </div>
            </div>