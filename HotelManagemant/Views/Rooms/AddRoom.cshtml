@model HotelManagemant.ViewModels.AddRoomViewModel
@{
    /**/

    ViewBag.Title = "book";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="col-md-12">
<div class="bg-primary">
    <i class="fa fa-clock-o fa-fw"></i> Add Room
</div>  
    </div>

@foreach (var item in Model.rooms)
{

    string panelClass = "bg-success";
    if (item.Status == "Booked")
    {
        panelClass = "bg-danger";
    }
    <div style="padding-top:5px;" class="col-md-3 text-center">
        <div class="card" style="width:18rem; border-radius:25px;">
            @*<img class="card-img-top" src="~/Images/286_180.svg" alt="Card image cap" style="width:286px;height:180px;">*@

            <div class="card-body @panelClass">
                <p class="card-text">
                    RoomNo: @item.RoomNo<br />
                    Capacity: @item.Capacity<br />
                    No of Beds: @item.NoofBeds<br />
                    RoomType: @item.Roomtype<br />
                    Price: @item.Price<br />
                </p>
                <span class="text-center">
                    @*@Html.ActionLink("Book", "AddRoom", new { roomId = item.id,bookingNo=Model.BookingNo }, new { @class = "btn btn-default" })*@
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(m => m.BookingNo)
                        @Html.Hidden("RoomId", item.id)
                        if (panelClass == "bg-success")
                        {
                            <input type="submit" class="btn btn-default" value="Add" />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-default" value="Add" disabled="disabled" />
                        }
                    }
                </span>
                <div style="height:5px;"></div>
            </div>
        </div>
    </div>

}
    }

