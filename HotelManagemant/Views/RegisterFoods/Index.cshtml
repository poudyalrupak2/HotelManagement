@model IEnumerable<HotelManagemant.Models.RegisterFood>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="panel-group">
    <div class="panel panel-primary">
        <div class="panel-heading"> Registered Food</div>

        <div class="panel-body">



            <table class="table tab-border table-responsive" id="table1">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FoodCategory.CategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Unit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ingredients)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FoodCategory.CategoryName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ingredients)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <p>
                @Html.ActionLink("Create New", "Create",null,new { @class = "btn btn-primary" })
            </p>
</div>
        </div>
    </div>

            <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" />
            <link href="~/Content/DataTables/css/responsive.bootstrap.min.css" />
            <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>

            <script src="~/Scripts/datatables/dataTables.bootstrap4.min.js"></script>
            <script>
                $(function () {
                    $("#table1").DataTable();
                });
            </script>
